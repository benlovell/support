<div class="row">
  <div class="col-md-12">

    <h2 id="comments-by-rating" class="add-bottom-margin">Comments by rating</h2>

    <table class="table table-striped table-hover">
      <% 1.upto(5).each do |rating| %>
        <% comments = comments_by_rating[rating] %>
        <tbody id="comments-for-rating-<%= rating %>">
          <% comments.each_with_index do |comment, i| %>
            <tr>
              <td class="col-md-4">
                <% if i == 0 %>
                  <strong><%= label_for_rating(rating) %></strong>
                <% end %>
              </td>
              <td class="comment col-md-8 breakable">
                <%= simple_format(word_wrap(comment)) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
